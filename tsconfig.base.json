{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": ".",
		"strict": true,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es6",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@equinor/workspace-fusion": ["packages/workspace-fusion/src/index.ts"],
			"@equinor/workspace-fusion-modules": ["packages/workspace-fusion-modules/src/index.ts"],
			"@equinor/workspace-react": ["packages/workspace-react/src/index.ts"],
			"@equinor/workspace-core": ["packages/workspace-core/src/index.ts"],
			"@equinor/workspace-observable-proxy": ["packages/observable-proxy/src/index.ts"],
			"@equinor/workspace-filter": ["packages/filter/src/index.ts"],
			"@equinor/workspace-garden": ["packages/garden/src/index.ts"],
			"@equinor/workspace-powerbi": ["packages/power-bi/src/index.ts"],
			"@equinor/workspace-sidesheet": ["packages/sidesheet/src/index.ts"],
			"@equinor/workspace-status-bar": ["packages/status-bar/src/index.ts"],
			"@equinor/workspace-data-source": ["packages/data-source/src/index.ts"],
			"@equinor/workspace-grid": ["packages/ag-grid/src/index.ts"]
		},
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"exclude": ["node_modules", "tmp"]
}

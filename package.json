{
	"name": "workspace",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"build": "npx turbo build",
		"lint": "npx turbo lint",
		"lint:staged": "lint-staged",
		"bootstrap": "lerna bootstrap",
		"clean": "yarn run clean:modules && yarn run clean:build",
		"clean:build": "rm -rf packages/*/dist",
		"build:clean": "rm -rf packages/*/dist && yarn run build",
		"npm:clean": "rm -rf node_modules && lerna exec 'rm -rf node_modules'"
	},
	"private": true,
	"dependencies": {
		"tslib": "^2.3.0",
		"turbo": "^1.6.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-typescript": "^9.0.2",
		"@storybook/core-server": "^6.5.12",
		"@storybook/react": "^6.5.12",
		"@testing-library/react": "13.3.0",
		"@types/jest": "27.4.1",
		"@types/luxon": "^3.0.0",
		"@types/node": "16.11.7",
		"@types/react": "18.0.13",
		"@types/react-dom": "^18.0.8",
		"@types/react-is": "17.0.3",
		"@types/react-router-dom": "5.3.3",
		"@types/styled-components": "^5.1.25",
		"@typescript-eslint/eslint-plugin": "~5.24.0",
		"@typescript-eslint/parser": "~5.24.0",
		"@vitejs/plugin-react": "^1.3.2",
		"conventional-changelog-conventionalcommits": "^5.0.0",
		"cypress": "^9.1.0",
		"eslint": "~8.15.0",
		"eslint-config-prettier": "8.1.0",
		"eslint-plugin-cypress": "^2.10.3",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jsx-a11y": "6.5.1",
		"eslint-plugin-react": "7.30.0",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-tsdoc": "^0.2.16",
		"husky": "^8.0.1",
		"jest": "27.5.1",
		"lerna": "^6.0.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.6.2",
		"react-test-renderer": "18.2.0",
		"rollup": "^3.2.5",
		"storybook": "^6.5.12",
		"ts-jest": "27.1.4",
		"ts-node": "~10.8.0",
		"typescript": "~4.7.2",
		"typescript-plugin-styled-components": "^2.0.0",
		"vite": "^3.1.1"
	},
	"lint-staged": {
		"./packages/**/src/**/*.{ts,tsx}": [
			"eslint --quiet --fix"
		]
	},
	"workspaces": [
		"packages/**"
	]
}

{
    "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json",
    "sourceRoot": "packages/workspace-core/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/workspace-core",
                "main": "packages/workspace-core/src/index.ts",
                "tsConfig": "packages/workspace-core/tsconfig.lib.json",
                "assets": ["packages/workspace-core/*.md"]
            }
        },
        "publish": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs workspace-core {args.ver} {args.tag}"
            },
            "dependsOn": [
                {
                    "projects": "self",
                    "target": "build"
                }
            ]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/workspace-core/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/workspace-core"],
            "options": {
                "jestConfig": "packages/workspace-core/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}

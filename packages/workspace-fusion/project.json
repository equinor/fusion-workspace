{
    "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json",
    "sourceRoot": "packages/workspace-fusion/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "dependsOn": [
                "^build"
            ],
            "options": {
                "outputPath": "dist/packages/workspace-fusion",
                "main": "packages/workspace-fusion/src/index.ts",
                "tsConfig": "packages/workspace-fusion/tsconfig.lib.json",
                "assets": [
                    "packages/workspace-fusion/*.md"
                ]
            }
        },
        "publish": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs workspace-fusion {args.ver} {args.tag}"
            },
            "dependsOn": [
                {
                    "projects": "self",
                    "target": "^build"
                }
            ]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "packages/workspace-fusion/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": [
                "coverage/packages/workspace-fusion"
            ],
            "options": {
                "jestConfig": "packages/workspace-fusion/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}